<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.presentator">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.PersonItem"></activity>
        <activity android:name=".view.PresentAdding" />
        <activity android:name=".view.auth.SignInActivity" />
        <activity android:name=".view.auth.SignUpActivity" />
        <activity android:name=".view.NewsItem" />
        <activity android:name=".view.Profile" />
        <activity android:name=".view.PeopleSearch">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <!-- FIXME что это за action, идея ругается если его нету -->
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.MainActivity" />
        <activity android:name=".view.NewsFeed" />
    </application>

</manifest>