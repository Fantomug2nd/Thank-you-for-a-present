<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.presentator">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.presentator.view.auth.SignUpActivity" />
        <activity android:name="com.example.presentator.view.NewsItem" />
        <activity android:name="com.example.presentator.view.Profile" />
        <activity android:name="com.example.presentator.view.auth.SignInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <!--FIXME что это за action, идея ругается если его нету-->
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.presentator.view.MainActivity" />
        <activity android:name="com.example.presentator.view.NewsFeed" />
    </application>

</manifest>